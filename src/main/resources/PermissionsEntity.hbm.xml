<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="model.PermissionsEntity" table="permissions" schema="restaurant_manager">
        <id name="id">
            <column name="id" sql-type="int"/>
        </id>
        <property name="permissionName">
            <column name="permission_name" sql-type="varchar(300)" length="300"/>
        </property>
        <property name="dateCreat">
            <column name="date_creat" sql-type="datetime"/>
        </property>
        <property name="dateUpdate">
            <column name="date_update" sql-type="datetime"/>
        </property>
        <property name="flag">
            <column name="flag" sql-type="int"/>
        </property>
    </class>
</hibernate-mapping>