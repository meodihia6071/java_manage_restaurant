<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="model.SalariesEntity" table="salaries" schema="restaurant_manager">
        <id name="id">
            <column name="id" sql-type="int"/>
        </id>
        <property name="personId">
            <column name="person_id" sql-type="int"/>
        </property>
        <property name="salaryAmount">
            <column name="salary_amount" sql-type="float" precision="-1"/>
        </property>
        <property name="effectiveDate">
            <column name="effective_date" sql-type="datetime"/>
        </property>
        <property name="flag">
            <column name="flag" sql-type="int"/>
        </property>
    </class>
</hibernate-mapping>